{% macro pageLinkName(text) %}{{ text|lower|replace({' ':'-'})|replace({'&':'and'}) }}{% endmacro %}

<div class="subpage-content {{  _self.pageLinkName(page.menu) }}" id="{{  _self.pageLinkName(page.menu) }}">
  <h3 class="section-title">{{ page.title }}</h3>
  {% if page.content %}
    <div class="content user-content">
      {{ page.content }}
      {% if header.sidenote %}
        <div class="sidenote">
          {{ header.sidenote }}
        </div>
      {% endif %}
    </div>
  {% endif %}
  <div class="isotope-grid lightbox">
    <div class="grid-sizer"></div>
    <div class="gutter-sizer"></div>
    {% for photo in page.media.images %}
      <a class="photo chocolat-image" href="{{ photo.quality(80).url }}">
        {{ photo.quality(80) }}
      </a>
    {% endfor %}
  </div>
</div>